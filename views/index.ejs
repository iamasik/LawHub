          <div class="image-box col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12">
            <div class="iamge-holder">
              <img class="img-fluid" src="./Asset/images/vidimg.PNG" alt="video_image">
            </div>
          </div>
        </div>
      </div>
