    <!-- 4blocks -->
    <div class="fourblock_holder">
      <div class="container">
        <div class="row">
          <% for (let i = 0; i < 4; i++) { %>
            <div class="blocks block1 col-xxl-3 col-xl-3 col-lg-3 col-md-6 col-sm-12 col-12">
              <div class="card" style="width: 13rem">
                <img
                  src="/Asset/images/dummy.png"
                  class="card-img-top"
                  alt="..."
                />
                <div class="card-body" style="text-align: center;">
                  <h5 class="card-title">
                    <%= top4Data[i].name %>
                  </h5>
                  <p class="card-text"><%= top4Data[i].total %></p>
                  <a href="/catView/<%= AllCat[i].id %>" class="btn_explore">Explore Now</a>
                </div>
              </div>
            </div>

          <% } %>

        </div>
      </div>
    </div>
    <!-- end 4 blocks -->

    <!-- 2 Blocks sections -->

    <div class="two-block-wrapper">
      <div class="container">
        <div class="row gx-0 gy-3">
